{
    // tsconfig for enabling TypeScript support for Vue SFCs in src
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "target": "ES2021",
        "module": "ESNext",
        "lib": ["ES2021", "DOM"],
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "allowJs": true,
        // "noEmit": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "rootDir": "./src",
        "paths": {
            "@/*": ["./src/*"]
        },
    },
    "include": [
        "src/**/*.vue",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx"
    ],
    "exclude": ["node_modules", "dist"]
}