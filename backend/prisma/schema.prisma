generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(uuid())
  email         String           @unique
  passwordHash  String
  username      String?          @unique
  picture       Bytes?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  lastLogin     DateTime?
  deletedAt     DateTime?

  AuthToken     AuthToken[]
  MangaAlerts   MangaAlert[]
  AnimeAlerts   AnimeAlert[]

  @@map("users")
}

model AuthToken {
  id               String   @id @default(uuid())
  userId           String
  refreshToken     String   @unique
  refreshExpiresAt DateTime
  revoked          Boolean  @default(false)
  createdAt        DateTime @default(now())
  userAgent        String?
  ipAddress        String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("auth_tokens")
}

model Work {
  id       Int     @id @default(autoincrement())
  name     String
  synopsis String?
  imgUrl   String?

  Mangas   Manga[]
  Animes   Anime[]

  @@map("works")
}

model Manga {
  id      Int    @id @default(autoincrement())
  source  String
  chapter String
  workId Int

  work   Work    @relation(fields: [workId], references: [id])
  MangaAlerts   MangaAlert[]

  @@map("mangas")
}

model Anime {
  id      Int    @id @default(autoincrement())
  source  String
  season  String
  episode String
  workId  Int

  work   Work    @relation(fields: [workId], references: [id])
  AnimeAlerts   AnimeAlert[]

  @@map("animes")
}

model MangaAlert {
  userId  String
  mangaId Int

  User    User  @relation(fields: [userId], references: [id])
  Manga   Manga @relation(fields: [mangaId], references: [id])

  @@id([userId, mangaId])
  @@map("manga_alerts")
}

model AnimeAlert {
  userId  String
  animeId Int

  User    User  @relation(fields: [userId], references: [id])
  Anime   Anime @relation(fields: [animeId], references: [id])

  @@id([userId, animeId])
  @@map("anime_alerts")
}
